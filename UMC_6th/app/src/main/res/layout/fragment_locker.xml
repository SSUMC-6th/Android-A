<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/txLocker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="10dp"
        android:text="보관함"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="로그인"
        android:textColor="@color/flo"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/txLocker"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tbLocker"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        app:tabTextColor="@color/grey"
        app:tabSelectedTextColor="@color/flo"
        app:tabIndicatorColor="@color/flo"
        app:tabIndicatorFullWidth="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txLocker">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저장한 곡" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="음악 파일" />

    </com.google.android.material.tabs.TabLayout>

    <ImageView
        android:id="@+id/imgLockerSelectAll"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/btn_playlist_select_off"
        app:layout_constraintTop_toBottomOf="@id/tbLocker"
        app:layout_constraintStart_toStartOf="@id/tbLocker"/>

    <TextView
        android:id="@+id/txLockerSelectAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전체선택"
        android:textColor="@color/grey"
        app:layout_constraintStart_toEndOf="@id/imgLockerSelectAll"
        app:layout_constraintTop_toTopOf="@id/imgLockerSelectAll"
        app:layout_constraintBottom_toBottomOf="@id/imgLockerSelectAll"/>

    <ImageView
        android:id="@+id/imgLockerPlayAll"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/icon_browse_arrow_right"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/imgLockerSelectAll"
        app:layout_constraintBottom_toBottomOf="@id/imgLockerSelectAll"
        app:layout_constraintStart_toEndOf="@id/txLockerSelectAll"/>

    <TextView
        android:id="@+id/txLockerPlayAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전체듣기"
        android:textColor="@color/grey"
        app:layout_constraintTop_toTopOf="@id/imgLockerSelectAll"
        app:layout_constraintBottom_toBottomOf="@id/imgLockerSelectAll"
        app:layout_constraintStart_toEndOf="@id/imgLockerPlayAll"/>

    <TextView
        android:id="@+id/txLockerEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="편집"
        android:layout_marginEnd="20dp"
        android:textColor="@color/grey"
        app:layout_constraintTop_toTopOf="@id/imgLockerSelectAll"
        app:layout_constraintBottom_toBottomOf="@id/imgLockerSelectAll"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpLocker"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLockerSelectAll" />


</androidx.constraintlayout.widget.ConstraintLayout>