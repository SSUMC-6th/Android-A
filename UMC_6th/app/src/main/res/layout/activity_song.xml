<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/song_setting_ib"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/btn_player_setting"
        android:background="@color/white"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/song_eq_ib"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/btn_player_eq_off"
        android:background="@color/white"
        app:layout_constraintStart_toEndOf="@+id/song_setting_ib"
        app:layout_constraintTop_toTopOf="@+id/song_setting_ib"/>

    <ImageButton
        android:id="@+id/song_down_ib"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="15dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@drawable/nugu_btn_down"
        app:layout_constraintBottom_toBottomOf="@+id/song_eq_ib"
        app:layout_constraintTop_toTopOf="@+id/song_eq_ib"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:id="@+id/song_more_ib"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="11dp"
        android:scaleType="fitXY"
        android:background="@color/white"
        android:src="@drawable/btn_player_more"
        app:layout_constraintEnd_toEndOf="@+id/song_down_ib"
        app:layout_constraintTop_toBottomOf="@+id/song_down_ib"/>

    <TextView
        android:id="@+id/song_music_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="제목"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/song_setting_ib"/>

    <TextView
        android:id="@+id/song_music_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="가수"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/song_music_title_tv"
        app:layout_constraintStart_toStartOf="@id/song_music_title_tv"
        app:layout_constraintEnd_toEndOf="@id/song_music_title_tv"/>

    <ImageView
        android:id="@+id/song_music_singer_arrow_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="2dp"
        android:src="@drawable/btn_main_arrow_more"
        app:layout_constraintStart_toEndOf="@id/song_music_singer_tv"
        app:layout_constraintTop_toTopOf="@id/song_music_singer_tv"
        app:layout_constraintBottom_toBottomOf="@id/song_music_singer_tv"/>

    <ImageView
        android:id="@+id/song_album_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:src="@drawable/img_album_exp2"
        app:layout_constraintTop_toBottomOf="@id/song_music_singer_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/song_lyrics_01_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="나리는 꽃가루에"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/song_album_iv"
        app:layout_constraintStart_toStartOf="@id/song_album_iv"
        app:layout_constraintEnd_toEndOf="@id/song_album_iv"/>

    <TextView
        android:id="@+id/song_lyrics_02_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="눈이 따금해 아야"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/song_lyrics_01_tv"
        app:layout_constraintStart_toStartOf="@id/song_lyrics_01_tv"
        app:layout_constraintEnd_toEndOf="@id/song_lyrics_01_tv"/>

    <LinearLayout
        android:id="@+id/song_like_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/song_lyrics_02_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/song_like_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_my_like_off"/>

        <ImageView
            android:id="@+id/song_unlike_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="24dp"
            android:src="@drawable/btn_player_unlike_off"/>

    </LinearLayout>
    
    <SeekBar
        android:id="@+id/song_seekbar_sb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:progressTint="@color/song_player"
        android:progressBackgroundTint="@color/song_player_bg"
        android:progress="0"
        android:max="100000"
        android:thumb="@color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/song_like_ll"/>

    <TextView
    android:id="@+id/song_start_time_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="00:00"
    android:textColor="@color/select_color"
    app:layout_constraintTop_toBottomOf="@id/song_seekbar_sb"
    app:layout_constraintStart_toStartOf="@id/song_seekbar_sb"/>

    <TextView
        android:id="@+id/song_end_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01:00"
        android:textColor="@color/gray_color"
        app:layout_constraintTop_toBottomOf="@id/song_seekbar_sb"
        app:layout_constraintEnd_toEndOf="@id/song_seekbar_sb"/>

    <LinearLayout
        android:id="@+id/song_player_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/song_start_time_tv">

        <ImageView
            android:id="@+id/song_repeat_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="50dp"
            android:src="@drawable/nugu_btn_repeat_inactive" />

        <ImageView
            android:id="@+id/song_miniplayer_pre_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/btn_miniplayer_previous"/>

        <ImageView
            android:id="@+id/song_miniplayer_pause_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/btn_miniplayer_play"/>

        <ImageView
            android:id="@+id/song_miniplayer_play_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/btn_miniplay_mvpause"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/song_miniplayer_next_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/btn_miniplayer_next" />

        <ImageView
            android:id="@+id/song_random_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="50dp"
            android:src="@drawable/nugu_btn_random_inactive" />

    </LinearLayout>







    <LinearLayout
        android:id="@+id/song_bottom_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/song_player_ll">

        <ImageView
            android:id="@+id/song_instagram_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="110dp"
            android:src="@drawable/btn_actionbar_instagram"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/song_similar_iv"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:src="@drawable/btn_player_related"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/song_list_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="110dp"
            android:src="@drawable/btn_player_go_list"
            app:layout_constraintEnd_toEndOf="parent" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>