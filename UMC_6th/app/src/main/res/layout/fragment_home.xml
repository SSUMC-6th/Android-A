<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_home"
    tools:context=".HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/home_pannel_background_iv"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_first_album_default"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/home_pannel_btn_nugu_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/btn_main_mike"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toStartOf="@+id/home_pannel_btn_ticket_iv"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/home_pannel_btn_ticket_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/btn_main_ticket"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/home_pannel_btn_setting_iv"/>

        <ImageView
            android:id="@+id/home_pannel_btn_setting_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/btn_main_setting"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/home_pannel_tilte_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매혹적인 음색의 여성 보컬\n팝"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_pannel_btn_nugu_iv"/>

        <ImageView
            android:id="@+id/home_pannel_btn_play_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/btn_panel_play_large"
            android:layout_marginTop="85dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_pannel_btn_nugu_iv"/>

        <TextView
            android:id="@+id/home_pannel_album_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 36곡 202006.05"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@+id/home_pannel_tilte_tv"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_album_info_tv">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/home_pannel_album_img_iv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/img_album_exp"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/home_pannel_album_tilte_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="잠이 안온다"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginStart="15dp"
                    app:layout_constraintBottom_toTopOf="@+id/home_pannel_album_singer_tv"
                    app:layout_constraintStart_toEndOf="@id/home_pannel_album_img_iv"
                    app:layout_constraintTop_toTopOf="@id/home_pannel_album_img_iv"/>

                <TextView
                    android:id="@+id/home_pannel_album_singer_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="bear"
                    android:textColor="@color/white"
                    android:layout_marginStart="15dp"
                    app:layout_constraintTop_toBottomOf="@id/home_pannel_album_tilte_tv"
                    app:layout_constraintStart_toEndOf="@id/home_pannel_album_img_iv"
                    app:layout_constraintBottom_toBottomOf="@id/home_pannel_album_img_iv"/>

                <ImageView
                    android:id="@+id/home_pannel_album_img2_iv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/img_album_exp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/home_pannel_album_img_iv"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/home_pannel_album_tilte2_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="잠이 안온다"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginStart="15dp"
                    app:layout_constraintBottom_toTopOf="@+id/home_pannel_album_singer2_tv"
                    app:layout_constraintStart_toEndOf="@id/home_pannel_album_img2_iv"
                    app:layout_constraintTop_toTopOf="@id/home_pannel_album_img2_iv"/>

            <TextView
                android:id="@+id/home_pannel_album_singer2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bear"
                android:textColor="@color/white"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toBottomOf="@id/home_pannel_album_tilte2_tv"
                app:layout_constraintStart_toEndOf="@id/home_pannel_album_img2_iv"
                app:layout_constraintBottom_toBottomOf="@id/home_pannel_album_img2_iv"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/home_today_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="오늘 발매 음악"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_background_iv"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/home_today_arrow_img_iv"
            android:layout_width="19dp"
            android:layout_height="18dp"
            android:scaleType="fitStart"
            android:src="@drawable/btn_arrow_more"
            app:layout_constraintBottom_toBottomOf="@id/home_today_title_tv"
            app:layout_constraintStart_toEndOf="@id/home_today_title_tv"
            app:layout_constraintTop_toTopOf="@id/home_today_title_tv"
            />
        <TextView
            android:id="@+id/home_today_total_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="종합"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_background_iv"
            app:layout_constraintEnd_toStartOf="@+id/home_today_domestic_tv"/>

        <TextView
            android:id="@+id/home_today_domestic_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="국내"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_background_iv"
            app:layout_constraintEnd_toStartOf="@+id/home_today_foreign_tv"/>
        <TextView
            android:id="@+id/home_today_foreign_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="해외"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_background_iv"
            app:layout_constraintEnd_toEndOf="parent"/>

        <HorizontalScrollView
            android:id="@+id/home_today_hsv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/home_today_title_tv"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/home_today_album1_iv"
                                android:layout_width="180dp"
                                android:layout_height="180dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="12dp"
                                android:src="@drawable/img_album_exp2"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                            <ImageView
                                android:id="@+id/home_today_album2_iv"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/widget_black_play"
                                app:layout_constraintBottom_toBottomOf="@+id/home_today_album1_iv"
                                app:layout_constraintEnd_toEndOf="@+id/home_today_album1_iv"/>

                            <TextView
                                android:id="@+id/home_today_album_title_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="LILAC"
                                android:layout_marginTop="10dp"
                                app:layout_constraintStart_toStartOf="@+id/home_today_album1_iv"
                                app:layout_constraintTop_toBottomOf="@+id/home_today_album1_iv"
                                android:textColor="@color/black"
                                android:textSize="22sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/home_today_singer_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="아이유 (IU)"
                                android:layout_marginTop="3dp"
                                app:layout_constraintStart_toStartOf="@+id/home_today_album1_iv"
                                app:layout_constraintTop_toBottomOf="@+id/home_today_album_title_tv"
                                android:textColor="@color/black"
                                android:textSize="17sp"/>

                            </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/home_today_album1_1_iv"
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="12dp"
                            android:src="@drawable/img_album_exp2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <ImageView
                            android:id="@+id/home_today_album2_1_iv"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/widget_black_play"
                            app:layout_constraintBottom_toBottomOf="@+id/home_today_album1_1_iv"
                            app:layout_constraintEnd_toEndOf="@+id/home_today_album1_1_iv"/>

                        <TextView
                            android:id="@+id/home_today_album_title_2_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="제목"
                            android:textColor="@color/black"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="@+id/home_today_album1_1_iv"
                            app:layout_constraintTop_toBottomOf="@+id/home_today_album1_1_iv" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="아이유 (IU)"
                            android:layout_marginTop="3dp"
                            app:layout_constraintStart_toStartOf="@+id/home_today_album1_1_iv"
                            app:layout_constraintTop_toBottomOf="@+id/home_today_album_title_2_tv"
                            android:textColor="@color/black"
                            android:textSize="17sp"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/home_today_album1_2_iv"
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:layout_marginStart="20dp"
                            android:src="@drawable/img_album_exp2"
                            android:layout_marginTop="12dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <ImageView
                            android:id="@+id/home_today_album2_2_iv"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/widget_black_play"
                            app:layout_constraintBottom_toBottomOf="@+id/home_today_album1_2_iv"
                            app:layout_constraintEnd_toEndOf="@+id/home_today_album1_2_iv"/>

                        <TextView
                            android:id="@+id/home_today_album_title_3_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="제목"
                            android:textColor="@color/black"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="@+id/home_today_album1_2_iv"
                            app:layout_constraintTop_toBottomOf="@+id/home_today_album1_2_iv" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="아이유 (IU)"
                            android:layout_marginTop="3dp"
                            app:layout_constraintStart_toStartOf="@+id/home_today_album1_2_iv"
                            app:layout_constraintTop_toBottomOf="@+id/home_today_album_title_3_tv"
                            android:textColor="@color/black"
                            android:textSize="17sp"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <ImageView
            android:id="@+id/home_banner_iv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:src="@drawable/img_home_viewpager_exp"
            app:layout_constraintTop_toBottomOf="@id/home_today_hsv"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/home_daily_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매일 들어도 좋은 팟캐스트"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/home_banner_iv"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            android:textStyle="bold"/>

        <HorizontalScrollView
            android:id="@+id/home_daily_hsv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/home_daily_title_tv"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/home_daily_album1_iv"
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="12dp"
                            android:src="@drawable/img_potcast_exp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                            android:id="@+id/home_daily_album_title_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="제목"
                            android:layout_marginTop="10dp"
                            app:layout_constraintStart_toStartOf="@+id/home_daily_album1_iv"
                            app:layout_constraintTop_toBottomOf="@+id/home_daily_album1_iv"
                            android:textColor="@color/black"
                            android:textSize="22sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="가수"
                            android:layout_marginTop="3dp"
                            app:layout_constraintStart_toStartOf="@+id/home_daily_album1_iv"
                            app:layout_constraintTop_toBottomOf="@+id/home_daily_album_title_tv"
                            android:textColor="@color/black"
                            android:textSize="17sp"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/home_daily_album1_1_iv"
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="12dp"
                            android:src="@drawable/img_potcast_exp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                            android:id="@+id/home_daily_album_title_2_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="제목"
                            android:textColor="@color/black"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="@+id/home_daily_album1_1_iv"
                            app:layout_constraintTop_toBottomOf="@+id/home_daily_album1_1_iv" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="가수"
                            android:layout_marginTop="3dp"
                            app:layout_constraintStart_toStartOf="@+id/home_daily_album1_1_iv"
                            app:layout_constraintTop_toBottomOf="@+id/home_daily_album_title_2_tv"
                            android:textColor="@color/black"
                            android:textSize="17sp"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/home_daily_album1_2_iv"
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:layout_marginStart="20dp"
                            android:src="@drawable/img_potcast_exp"
                            android:layout_marginTop="12dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                            android:id="@+id/home_daily_album_title_3_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="제목"
                            android:textColor="@color/black"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="@+id/home_daily_album1_2_iv"
                            app:layout_constraintTop_toBottomOf="@+id/home_daily_album1_2_iv" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="가수"
                            android:layout_marginTop="3dp"
                            app:layout_constraintStart_toStartOf="@+id/home_daily_album1_2_iv"
                            app:layout_constraintTop_toBottomOf="@+id/home_daily_album_title_3_tv"
                            android:textColor="@color/black"
                            android:textSize="17sp"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/home_video_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비디오 콜렉션"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/home_daily_hsv"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            android:textStyle="bold"/>

        <HorizontalScrollView
            android:id="@+id/home_video_hsv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/home_video_title_tv"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/home_video_album1_iv"
                            android:layout_width="340dp"
                            android:layout_height="180dp"
                            android:scaleType="centerCrop"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="12dp"
                            android:src="@drawable/img_video_exp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                            android:id="@+id/home_video_album_title_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="제목"
                            android:layout_marginTop="10dp"
                            app:layout_constraintStart_toStartOf="@+id/home_video_album1_iv"
                            app:layout_constraintTop_toBottomOf="@+id/home_video_album1_iv"
                            android:textColor="@color/black"
                            android:textSize="22sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="가수"
                            android:layout_marginTop="3dp"
                            app:layout_constraintStart_toStartOf="@+id/home_video_album1_iv"
                            app:layout_constraintTop_toBottomOf="@+id/home_video_album_title_tv"
                            android:textColor="@color/black"
                            android:textSize="17sp"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
